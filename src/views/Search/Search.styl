@import "../../assets/stylus/variable.styl"

.search-wrapper
  width 100%
  height 100%
  overflow hidden
  padding-bottom 40px
  .search-content
    position absolute
    top 46px
    left 0
    right 0
    bottom 40px
    overflow hidden
    .option-box
      display flex
      justify-content space-between
      padding 15px
      background-color $color-background-d
      .option-item
        display flex
        flex-direction column
        align-items center
        font-size $font-size-small-x
        .iconfont
          font-size 28px
          margin-bottom 5px
        .icon-wenzhang
          color #7dc636
        .icon-huangguan
          color #f0c300
        .icon-kanyikantubiao
          color #319f70
        .icon-huati
          color #fb8d21
        .icon-laba
          color #ffcc01
