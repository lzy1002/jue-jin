@import "../../assets/stylus/variable.styl"
@import "../../assets/stylus/mixin.styl"

.authors-wrapper
  position relative
  width 100%
  height 100%
  z-index 9
  background-color $color-background
  .authors-header
    width 100%
    height 50px
    display flex
    align-items center
    padding 0 15px
    color $color-text-ll
    background-color $color-theme
    .back
      extend-click()
      margin-right 20px
      .iconfont
        font-size $font-size-large-x
    .content
      font-size $font-size-large-x
      flex 1
      height 50px
      line-height 50px
