@import "../../assets/stylus/variable.styl"
@import "../../assets/stylus/mixin.styl"

.article-wrapper
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background-color $color-background
  padding-top 50px
  z-index 9
  overflow hidden
  .article-header
    border-1px($color-border)
    position fixed
    top 0
    left 0
    right 0
    height 50px
    display flex
    align-items center
    padding 0 15px
    background-color $color-background-d
    z-index 9
    .back
      margin-right 20px
      extend-click()
      .iconfont
        font-size $font-size-large-x
    .content
      flex 1
      height 50px
      overflow hidden
      .trans-box
        transition all 0.5s ease
        .user
          display flex
          align-items center
          height 50px
          .avatar-box
            width 30px
            height 30px
            border-radius 50%
            overflow hidden
            margin-right 10px
            img
              width 100%
              height 100%
          .username
            width 0
            flex 1
            font-size $font-size-small-x
            margin-right 10px
            span
              vertical-align middle
              margin-right 5px
            img
              vertical-align middle
        .title
          height 50px
          line-height 50px
          font-size $font-size-large-x
    .more
      margin-left 10px
      extend-click()
      .iconfont
        font-size $font-size-large-x
  .article-box
    width 100%
    height 100%
    padding 10px 10px 30px 10px
    margin-bottom 10px
    background-color $color-background-d
    .title
      font-size $font-size-medium-xx
      font-weight 700
      margin 15px 0 30px 0
      line-height 1.2
    .screenShot
      width 100%
      padding-bottom 55%
      background-repeat no-repeat
      background-size cover
      background-position center center
      margin-bottom 20px
    .article-content
      padding-bottom 30px
    .tags-box
      overflow hidden
      .tags-item
        float left
        font-size $font-size-small
        color $color-text-d
        background-color #ebebeb
        padding 8px 10px
        margin-right 5px
    .article-info
      color $color-text-l
      margin-top 30px
  .related-box
    background-color $color-background-d
    padding 0 10px
    margin-bottom 10px
    .related-header
      font-size $font-size-medium-x
      height 50px
      line-height 50px
      border-1px($color-border)


