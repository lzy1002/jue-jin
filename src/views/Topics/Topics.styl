@import "../../assets/stylus/variable.styl"

.topics-wrapper
  position relative
  width 100%
  height 100%
  z-index 9
  background-color $color-background
  .topics-header
    display flex
    align-items center
    width 100%
    height 50px
    font-size $font-size-large-x
    color $color-text-ll
    padding 0 15px
    background-color $color-theme
    .back
      extend-click()
      margin-right 20px
      .iconfont
        font-size $font-size-large-x
    .content
      flex 1
      height 50px
      line-height 50px
  .topics-content
    position absolute
    top 50px
    left 0
    right 0
    bottom 0
    overflow hidden
