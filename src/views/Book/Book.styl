@import "../../assets/stylus/variable.styl"
@import "../../assets/stylus/mixin.styl"

.book-wrapper
  position relative
  width 100%
  height 100%
  padding-top 50px
  background-color $color-background
  z-index 9
  .book-header
    position fixed
    top 0
    left 0
    right 0
    height 50px
    display flex
    align-items center
    padding 0 15px
    color $color-text-ll
    background-color $color-theme
    .back
      margin-right 20px
      extend-click()
      .iconfont
        font-size $font-size-large-x
    .content
      flex 1
      height 50px
      line-height 50px
      font-size $font-size-large-x
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
    .more
      margin-left 20px
      extend-click()
      .iconfont
        font-size $font-size-large-x
  .book-content
    width 100%
    height 100%
    overflow hidden
    .info-box
      background-color $color-background-d
      .book-info
        display flex
        align-items center
        padding 13px
        border-1px($color-border)
        .avatar
          width 82px
          height 115px
          background-repeat no-repeat
          background-size 100% 100%
          background-position center center
          margin-right 10px
        .content
          flex 1
          .title
            font-size $font-size-medium-xx
            margin-bottom 10px
            line-height 1.2
          .desc
            font-size $font-size-small-x
            line-height 1.5
            color #71777c
            margin-bottom 5px
          .user-box
            display flex
            justify-content space-between
            align-items center
            .user
              display flex
              align-items center
              .user-avatar
                width 25px
                height 25px
                border-radius 50%
                background-repeat no-repeat
                background-size cover
                background-position center center
                margin-right 5px
              .username
                font-size $font-size-small-x
                span
                  vertical-align bottom
                  margin-right 5px
                img
                  width 19px
                  vertical-align bottom
            .iconfont
              font-size $font-size-large-x
              color #71777c
      .buyer-info
        display flex
        justify-content space-between
        align-items center
        padding 8px 13px
        border-1px($color-border)
        .buy-count
          display flex
          align-items center
          color $color-text-l
      .buyer
        display flex
        align-items center
        .buyer-item
          width 25px
          height 25px
          border-radius 50%
          background-repeat no-repeat
          background-size cover
          background-position center center
          margin-right 5px
    .section-box
      background-color $color-background-d
      margin-bottom 10px
      .section-title
        font-size $font-size-large-x
        font-weight 700
        padding 12px 15px
    .desc-box
      padding 10px
      background-color $color-background-d
