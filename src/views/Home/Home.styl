.home-wrapper
  position relative
  width 100%
  height 100%
  overflow hidden
  padding-bottom 40px

.move-left-enter
  transform translateX(100%)

.move-left-enter-active
  transition all 1s ease
  transform translateX(0)

.move-left-exit
  transition all 1s ease
  transform translateX(0)

.move-left-exit-active
  transform translateX(-100%)



.move-right-enter
  transform translateX(-100%)

.move-right-enter-active
  transition all 1s ease
  transform translateX(0)

.move-right-exit
  transition all 1s ease
  transform translateX(0)

.move-right-exit-active
  transform translateX(100%)
