@import "../../assets/stylus/variable.styl"
@import "../../assets/stylus/mixin.styl"

.pin-wrapper
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 9
  padding-top 50px
  background-color $color-background
  .pin-header
    border-1px($color-border)
    position fixed
    top 0
    left 0
    right 0
    height 50px
    display flex
    align-items center
    padding 0 15px
    background-color $color-background-d
    .back
      margin-right 20px
      extend-click()
      .iconfont
        font-size $font-size-large-x
    .content
      flex 1
      font-size $font-size-large-x
    .more
      margin-left 10px
      extend-click()
      .iconfont
        font-size $font-size-large-x
  .pin-content
    width 100%
    height 100%
    background-color $color-background
    overflow hidden
    .detail-box
      padding 10px
      background-color $color-background-d
      margin-bottom 10px
      .user-box
        margin-bottom 10px
      .pin-text
        white-space pre-line
        line-height 1.3
        margin-bottom 10px
      .image-box
        display flex
        flex-wrap wrap
        .img
          width 30%
          height 100px
          background-repeat no-repeat
          background-size cover
          background-position center center
          margin-right 10px
          margin-bottom 10px
      .topic-box
        margin-top 15px
        .topic-item
          display inline-block
          font-size $font-size-small-x
          color #007fff
          border 1px solid #007fff
          border-radius 16px
          padding 5px 10px
    .comment-box
      background-color $color-background-d
      .title
        height 35px
        line-height 35px
        padding 0 10px
        font-size $font-size-medium-x
        border-1px($color-border)
