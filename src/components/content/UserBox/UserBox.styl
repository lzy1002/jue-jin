@import "../../../assets/stylus/variable.styl"

.userBox-wrapper
  display flex
  align-items center
  padding 10px
  .avatar-box
    width 40px
    height 40px
    border-radius 50%
    overflow hidden
    margin-right 10px
    img
      width 100%
      height 100%
  .content-box
    width 0
    flex 1
    margin-right 20px
    .username
      font-size $font-size-small-x
      margin-bottom 4px
      span
        vertical-align top
        margin-right 5px
      img
        vertical-align top
    .info
      font-size $font-size-small
      color $color-text-l
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
  .follow-btn
    width 75px
    padding 7px
    font-size $font-size-small-x
    color #6cbd45
    border 1px solid #6cbd45
    text-align center
    border-radius 3px
    .iconfont
      font-size $font-size-small-x
      margin-right 5px
