@import "../../../assets/stylus/variable.styl"

.userBox-wrapper
  display flex
  align-items center
  padding 10px
  .avatar-box
    width 40px
    height 40px
    border-radius 50%
    background-repeat no-repeat
    background-size cover
    background-position center center
    margin-right 10px
  .content-box
    width 0
    flex 1
    margin-right 20px
    .username
      font-size $font-size-small-x
      margin-bottom 4px
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      span
        vertical-align top
        margin-right 5px
    .info
      font-size $font-size-small
      color $color-text-l
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
