@import "../../../assets/stylus/variable.styl"
@import "../../../assets/stylus/mixin.styl"

.tagItem-wrapper
  display flex
  align-items center
  padding 5px 10px
  background-color $color-background-d
  border-1px($color-border)
  .img-box
    width 40px
    height 40px
    background-repeat no-repeat
    background-position center center
    background-size cover
    border-radius 50%
    overflow hidden
    margin-right 10px
  .content
    flex 1
    .title
      font-size $font-size-medium-x
      font-weight 700
      margin-bottom 5px
    .info
      font-size $font-size-small
      color $color-text-l
  .follow-btn
    width 75px
    font-size $font-size-small-x
    padding 7px
    text-align center
    border-radius 2px
    color #6cbd45
    border 1px solid #6cbd45
    .iconfont
      font-size $font-size-small-x
      margin-right 5px
