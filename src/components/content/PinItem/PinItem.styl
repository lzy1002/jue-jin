@import "../../../assets/stylus/variable.styl"
@import "../../../assets/stylus/mixin.styl"

.pinItem-wrapper
  background-color $color-background-d
  padding-top 10px
  margin-bottom 10px
  .pinItem-header
    display flex
    align-items center
    padding 0 10px
    .user-box
      flex 1
      margin-right 10px
  .pinItem-content
    padding 15px 10px
    border-1px($color-border)
    .text-box
      margin-bottom 10px
      .part-text
        display -webkit-box
        overflow hidden
        text-overflow ellipsis
        -webkit-line-clamp: 4
        -webkit-box-orient: vertical
        line-height 1.3
        white-space pre-line
      .all-text
        line-height 1.3
        white-space pre-line
      .open-text
        font-size $font-size-small-x
        color $color-theme
        margin-top 10px
    .image-box
      display flex
      flex-wrap wrap
      .img
        width 30%
        height 100px
        background-repeat no-repeat
        background-size cover
        background-position center center
        margin-right 10px
        margin-bottom 10px
    .tag-box
      margin-top 10px
      .tag-item
        display inline-block
        padding 5px 10px
        border 1px solid #007fff
        font-size $font-size-small-x
        color #007fff
        border-radius 16px
  .pinItem-bottom
    display flex
    .bottom-item
      flex 1
      text-align center
      color $color-text-l
      height 40px
      line-height 40px
      &.active
        color #0cbb0a
      .iconfont
        font-size $font-size-small-x
        margin-right 5px
      span
        font-size $font-size-small-x
