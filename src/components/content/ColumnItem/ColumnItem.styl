@import "../../../assets/stylus/variable.styl"
@import "../../../assets/stylus/mixin.styl"

.columnItem-wrapper
  background-color $color-background-d
  margin-bottom 10px
  .columnItem-header
    display flex
    align-items center
    padding 12px 12px 0 12px
    .user-box
      flex 1
      display flex
      justify-content space-between
      align-items center
      padding 10px
      margin-right 10px
      .avatar-box
        width 40px
        height 40px
        border-radius 50%
        overflow hidden
        margin-right 10px
        img
          width 100%
          height 100%
      .user-info
        width 0
        flex 1
        margin-right 20px
        display flex
        flex-direction column
        .username
          font-size $font-size-medium-m
          margin-bottom 3px
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
          span
            vertical-align middle
            margin-right 5px
          img
            vertical-align middle
        .post
          font-size $font-size-small
          color $color-text-l
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
      .follow-btn
        padding 6px 0
        width 75px
        text-align center
        border 1px solid #6cbd45
        color #6cbd45
        border-radius 3px
        .iconfont
          font-size $font-size-medium-m
          margin-right 5px
        .text
          font-size $font-size-medium-m
    .more
      color $color-text-l
  .columnItem-content
    padding 10px
    border-1px($color-border)
    .title-box
      font-size $font-size-medium-xx
      font-weight 700
      line-height 1.4
      color #17181a
      margin-bottom 5px
      .tag
        font-weight 400
        font-size $font-size-small
        color $color-theme
        padding 1px 5px
        background-color #e5f2ff
        border-radius 3px
        margin-right 10px
    .content
      display flex
      .text
        flex 1
        font-size $font-size-medium-m
        line-height 22px
        white-space normal
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-line-clamp 3
        -webkit-box-orient vertical
        color #5c6066
      .img-box
        width 65px
        height 65px
        border-radius 3px
        background-size cover
        background-repeat no-repeat
        background-position center center
        margin-left 10px
  .columnItem-footer
    display flex
    height 40px
    .footer-item
      flex 1
      text-align center
      line-height 40px
      color $color-text-l
      .iconfont
        font-size $font-size-medium
        margin-right 5px
        vertical-align top
      span
        font-size $font-size-small-x
        vertical-align top
