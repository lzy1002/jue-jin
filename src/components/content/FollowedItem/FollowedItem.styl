@import "../../../assets/stylus/variable.styl"

.followed-wrapper
  padding 10px
  display flex
  background-color $color-background-d
  margin-bottom 10px
  .avatar-box
    width 40px
    height 40px
    border-radius 50%
    overflow hidden
    margin-right 10px
    img
      width 100%
      height 100%
  .content
    display flex
    flex-direction column
    justify-content space-between
    .content-top
      font-size $font-size-medium-m
      .text
        color $color-text-l
        margin 0 5px
      .user
        .name
          vertical-align top
          margin-right 3px
        img
          vertical-align top
    .jobTitle
      color $color-text-l
