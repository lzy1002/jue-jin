@import "../../../assets/stylus/variable.styl"

.articleItem-wrapper
  padding 15px 10px
  background-color $color-background-d
  margin-bottom 10px
  .articleItem-header
    display flex
    justify-content space-between
    align-items center
    margin-bottom 12px
    font-size $font-size-small-x
    .user-box
      .avatar
        display inline-block
        width 20px
        height 20px
        vertical-align middle
        border-radius 50%
        background-repeat no-repeat
        background-size cover
        background-position center center
        margin-right 5px
      .username
        vertical-align middle
    .language-box
      color $color-text-d
  .articleItem-content
    display flex
    padding-bottom 10px
    .content-left
      flex 1
      .title
        font-size $font-size-medium-m
        font-weight 700
        color $color-title
        padding-bottom 5px
      .text
        display -webkit-box
        overflow hidden
        text-overflow ellipsis
        -webkit-line-clamp: 3
        -webkit-box-orient: vertical
        font-size $font-size-small-x
        color $color-text-d
        line-height 17px
    .content-right
      width 72px
      height 72px
      background-repeat no-repeat
      background-size cover
      background-position center center
      border-radius 3px
      img
        width 100%
        height 100%
  .articleItem-footer
    height 20px
    line-height 20px
    font-size $font-size-small
    color $color-text-d
    .like
      margin-right 20px
      &.active
        color $color-thumbed
    .iconfont
      font-size $font-size-small
      margin-right 3px
      vertical-align top
    .count
      vertical-align top
