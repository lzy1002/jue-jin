@import "../../../assets/stylus/variable.styl"

.refresh-wrapper
  position absolute
  top 50px
  left 50%
  width 44px
  height 44px
  transform translateX(-50%)
  display flex
  justify-content center
  align-items center
  background-color $color-background
  border-radius 50%
  z-index 999
  .icon-box
    animation rotate 1s linear infinite
    .iconfont
      font-size 22px
      color #d61515

@keyframes rotate
  0%
    transform rotate(0)
  100%
    transform rotate(360deg)
